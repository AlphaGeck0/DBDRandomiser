<!-- SelectionWindow.xaml -->
<Window x:Class="DBDRandomiser.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        Title="Select Survivors and Killers" Height="650" Width="1010" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="500"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Survivors" FontWeight="Bold" Grid.Column="0" Grid.Row="0" Margin="0,0,0,5" />
        <TextBlock Text="Killers" FontWeight="Bold" Grid.Column="2" Grid.Row="0" Margin="0,0,0,5" />
        <TextBlock Text="Survivor Perks" FontWeight="Bold" Grid.Column="4" Grid.Row="0" Margin="0,0,0,5" />
        <TextBlock Text="Killer Perks" FontWeight="Bold" Grid.Column="6" Grid.Row="0" Margin="0,0,0,5" />

        <ListBox x:Name="SurvivorsListBox" Grid.Column="0" Grid.Row="1" SelectionMode="Multiple" BorderThickness="2"/>
        <ListBox x:Name="KillersListBox" Grid.Column="2" Grid.Row="1" SelectionMode="Multiple" BorderThickness="2"/>
        <ListBox x:Name="SurvivorPerksListBox" Grid.Column="4" Grid.Row="1" SelectionMode="Multiple" BorderThickness="2"/>
        <ListBox x:Name="KillerPerksListBox" Grid.Column="6" Grid.Row="1" SelectionMode="Multiple" BorderThickness="2"/>

        <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Select All" Width="105" Margin="0,0,10,0" Click="SelectAllSurvivors_Click"/>
            <Button Content="Remove All" Width="105" Click="RemoveAllSurvivors_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Select All" Width="105" Margin="0,0,10,0" Click="SelectAllKillers_Click"/>
            <Button Content="Remove All" Width="105" Click="RemoveAllKillers_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="4" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Select All" Width="105" Margin="0,0,10,0" Click="SelectAllSurvivorPerks_Click"/>
            <Button Content="Remove All" Width="105" Click="RemoveAllSurvivorPerks_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="6" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Select All" Width="105" Margin="0,0,10,0" Click="SelectAllKillerPerks_Click"/>
            <Button Content="Remove All" Width="105" Click="RemoveAllKillerPerks_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.ColumnSpan="7" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Save Selections" Width="130" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="130" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>